include author

mixin recent_posts
  - var articles = env.helpers.getChronologicalList(contents, 'articles', true)
  - var number = _(articles).first(5)
  each article in number
    article.recent-article
      .info
        a(href=article.url)= article.title
        .small
          mixin author_info(article.metadata.author)
          |  (#{ moment(article.date).format('D MMMM YYYY') })
  .u-cf
