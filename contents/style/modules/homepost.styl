.homepost {
  position: relative;
  padding: 0 15px 15px;
  border-radius: 0;
  background-color: #225590;
  margin-bottom: 100px
}

@media (min-width: 800px) {
  box-shadow: 0px 1px 4px rgba(0,0,0,0.2);
}

.homepost h1 a {
  color: inherit;
}

.homepost h1 small {
  color: #666;
  font-weight: 400;
}

.index-page .homepost {
  padding: 15px;
}

.homepost:before,
.homepost:after {
  content: " ";
  display: table;
}


.homepost__author {
  display: none;
}

.homepost__footer {
  margin-bottom: 20px;
  padding-top: 15px;
  padding: 15px 14px 0;
  line-height: 54px;
  font-size: 13px;
  color: #868E95;
}

.homepost__footer__meta {
  margin-top: -8px;
}

.homepost__footer__meta__tags .tag {
  color: #868E95;
}

.homepost__image {
  min-width: -webkit-calc(100% + 30px);
  min-width: -moz-calc(100% + 30px);
  min-width: calc(100% + 30px);
  margin-left: -15px;
}

.homepost__singleLink
  text-align center
  padding-top 20px

.white-home
  background-color: #fff
  padding: 10px 30px 60px 30px

/* Desktop  */

@media (min-width: 800px) {
  .homepost {
    padding: 0 40px 20px 45px;
    border-radius: 0px;
    top: 50px;
  }

  .homepost__author {
    position: absolute;
    top: 20px;
    left: -35px;
    display: block;
  }

  .homepost__author__avatar {
    display: inline-block;
    margin-right: 15px;
    background: #fff;
    overflow: hidden;
  }

  .homepost__cta {
    display: table;
    width: 120%;
    margin-top: 40px;
    padding-top: 25px;
  }
  
  .white-home {
    background-color: #fff;
    padding-top: 30px;
    padding-left: -webkit-calc((100% - 600px) / 2);
    padding-left: -moz-calc((100% - 600px) / 2);
    padding-left: calc((100% - 600px) / 2);
    padding-right: -webkit-calc((100% - 600px) / 2);
    padding-right: -moz-calc((100% - 600px) / 2);
    padding-right: calc((100% - 600px) / 2);
  }
}
