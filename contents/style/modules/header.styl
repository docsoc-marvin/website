.header {
  padding-left: 0;
  padding-right: 0;
}

.header__blog {
  padding: 0 15px;
  margin-top: 20px;
  margin-bottom: 20px;
  text-align: center;
}

.header__blog__logo {
  margin-bottom: 15px;
}

.footer {
  display: block;
  margin-top: -35px;
}

.header .stripe {
  background-color: #21558f;
}

.header a {
  color: #fff;
}

.stripe {
  padding: 0 15px;
}

.navigation {
  list-style: none;
  font-size: 20px;
  margin-bottom: 0px;
  margin-left: 0px;
  padding-left: 0px;
  margin: 0 auto;
  float: none;
  margin-top: 15px;

  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.navigation__link {
  margin: 0px 5px;
  padding: 6px 11px;
  border-radius: 5px;
}

.navigation__link a {
}

.navigation__link:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.navigation__link.active {
  background-color: rgba(255, 255, 255, 0.2);
}

.header__blog__logo {
  float: none;
  margin-bottom: 0px;
}

@media (min-width: 800px) {
  .header .stripe {
    height: 200px;
  }

  .stripe, .header__blog {
    padding-left: 0;
    padding-right: 0;
  }

  .header__blog {
    margin-top: 50px;
  }

  .header__blog__button {
    float: right;
  }

  .header__blog__logo {
    float: left;
    margin-bottom: 0px;
  }

  .header {
    display: block;
  }

  .navigation {
    float: right;
    margin-top: 50px;
    justify-content: flex-end;
  }

  .stripe__button {
    width: auto;
    margin-top: 49px;
    float: right;
  }

  .stripe__text {
    float: left;
  }
}

